@using System.Collections.Generic;
@using SchedulerWebApp.Models;

@model List <Task>

@{
    ViewBag.Title = "TaskList";
}
<h2>TaskList</h2>

<div class="alerts-container container">

</div>

<div class="headers-container container">
    <div class="header col-md-2">№</div>
    <div class="header col-md-8">Дела</div>
    <div class="header col-md-2">Удалить</div>
</div>
<hr class="headers-hr" />

<div class="tasks-container">
    @Html.Partial("_TasksList")
</div>

<div class="add-form container">
    <form class="new-task-form">
        <div class="form-group">
            <input type="text" name="description" class="form-control" placeholder="Введите новое дело" required />
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить дело" class="form-control btn btn-success sumbit-task-button" />
        </div>
    </form>
</div>
